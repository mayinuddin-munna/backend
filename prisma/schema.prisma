generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  username    String   @id
  password    String
  displayName String
  createdAt   DateTime @default(now())

  murmurs   Murmur[] @relation("UserMurmurs")
  likes     Like[]   @relation("UserLikes")
  followers Follow[] @relation("FollowedBy")
  following Follow[] @relation("Following")
}

model Murmur {
  id        String   @id @default(cuid())
  text      String
  createdAt DateTime @default(now())

  user   User   @relation("UserMurmurs", fields: [userId], references: [username])
  userId String

  likes Like[] @relation("MurmurLikes")
}

model Follow {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  follower   User   @relation("Following", fields: [followerId], references: [username])
  followerId String

  followed   User   @relation("FollowedBy", fields: [followedId], references: [username])
  followedId String
}

model Like {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  user   User   @relation("UserLikes", fields: [userId], references: [username])
  userId String

  murmur   Murmur @relation("MurmurLikes", fields: [murmurId], references: [id])
  murmurId String
}
